<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %>" alt="<%= blog.name %>"/>
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <p></p>
            <p></p>
            <div class="description">
                <p><%= blog.body %></p>
            </div>
            <a href="/blogs/<%= blog._id%>/edit" class="ui basic yellow button">EDIT</a>
            <form action="/blogs/<%= blog._id%>?_method=DELETE" method="POST" id="deleteForm">
                <button class="ui basic red button">DELETE</button>
            </form>
        </div>
    </div>
</div>
<%- include("partials/footer") %>