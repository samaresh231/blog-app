<%- include("partials/header") %>

<div class="ui container main text">
    <h1>Blogs</h1>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach( (blog) => { %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image %>" alt="<%= blog.name %>"/>
                    </div>
                    <div class="content">
                        <a class="header" href="<%= blog.name %>"><%= blog.title %></a>
                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%= blog.body.substring(0,100) %>...</p>
                        </div>
                        <div class="extra">
                            <a href="/blogs/<%=blog._id %>" class="ui basic button">Read More <i class="right chevron icon"></i></a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<%- include("partials/footer") %>