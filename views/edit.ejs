<%- include("partials/header") %>

<div class="ui main text container segment">
    <h1>Edit <%= blog.title %></h1>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">   //method-overriding
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="title" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image Url</label>
            <input type="text" name="blog[image]" placeholder="image" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Blog Post</label>
            <textarea name="blog[body]" placeholder="Blog post goes here"><%= blog.body %></textarea>
        </div>
        <button class="ui button" type="submit">Submit</button>
    </form>
</div>

<%- include("partials/footer") %>